<h2>会員情報編集</h2>
<%= form_with model: current_customer,  url: public_customer_path do |f| %>
  <div class="field">
    <p>名前</p>
    <%= f.label :"(姓)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "family-name", :placeholder => "令和" %>
    <%= f.label :"(名)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "given-name", :placeholder => "道子" %><br />
  </div>
  <div class="field">
  <%= f.label :"(セイ)" %>
  <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "レイワ" %>
  <%= f.label :"(メイ)" %>
  <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "ミチコ" %><br />
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code", :placeholder => "0000000" %><br />
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_area :address, autofocus: true, autocomplete: "street-address", :placeholder => "東京都渋谷区代々木神園町0-0" %><br />
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel", :placeholder => "00000000000" %><br />
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %><br />
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
  <%= link_to "退会する", public_customers_confirm_path %>
  <% end %>