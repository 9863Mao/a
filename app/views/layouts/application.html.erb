<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <div>
          <a>
            <%= link_to root_path do %>
              <h1><span>LOGO</span></h1>
            <% end %>
          </a>
          <div>
            <ul>
              <% if customer_signed_in? %>
              <li>
                <%= link_to "マイページ", public_customers_my_page_path(current_customer) %>
              </li>
              <li>
                <%= link_to "商品一覧", public_items_path %>
              </li>
              <li>
                <p>カート</p>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
              </li>
              <% else %>
                <% if admin_signed_in? %>
                  <li>
                    <%= link_to "商品一覧", admin_items_path %>
                  </li>
                  <li>
                    <%= link_to "会員一覧", admin_customers_path %>
                  </li>
                  <li>
                    <%= link_to "注文履歴一覧", admin_homes_top_path %>
                  </li>
                  <li>
                    <%= link_to "ジャンル一覧", admin_genres_path %>
                  </li>
                  <li>
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to "About", public_homes_about_path %>
                  </li>
                  <li>
                    <%= link_to "商品一覧", public_items_path %>
                  </li>
                  <li>
                    <%= link_to "新規登録", new_customer_registration_path %>
                  </li>
                  <li>
                    <%= link_to "ログイン", new_customer_session_path %>
                  </li>
                <% end %>
              <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <div>
        <p>footer</p>
      </div>
    </footer>
  </body>
</html>